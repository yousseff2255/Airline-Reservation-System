                                <div>
                                    <h6 class="mb-0">Flight Number</h6>
                                    <small class="text-muted">BA-178</small>
                                </div>
                            </div>
                        </div>

                        <!-- Flight Times -->
                        <div class="col-md-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="text-center">
                                    <h5 class="mb-0">07:30</h5>
                                    <small class="text-muted">JFK</small>
                                </div>
                                <div class="text-center mx-3">
                                    <div class="flight-duration">7h 20m</div>
                                    <div class="border-top"></div>
                                    <small class="text-muted">Direct</small>
                                </div>
                                <div class="text-center">
                                    <h5 class="mb-0">14:50</h5>
                                    <small class="text-muted">LHR</small>
                                </div>
                            </div>
                        </div>

                        <!-- Class Selection -->
                        <div class="col-md-3">
