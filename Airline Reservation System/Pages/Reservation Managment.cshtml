@page
@model Airline_Reservation_System.Pages.Index1Model
@{
    ViewData["Title"] = "Reservation Managment";

}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Past Flights</title>
    <!-- Bootstrap and Styles -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #f8f9fa; /* Light background */
            color: #212529;
            font-family: Arial, sans-serif;
        }

        .table-wrapper {
            margin: 50px auto;
            width: 90%;
            background: #fff;
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .header {
            text-align: center;
            margin-bottom: 20px;
        }

            .header h1 {
                font-size: 24px;
                font-weight: bold;
                margin-bottom: 10px;
            }

            .header p {
                color: #6c757d;
            }

        .search-sort-wrapper {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .search-bar input {
            border-radius: 10px;
            border: 1px solid #ddd;
            padding: 8px 15px;
            width: 250px;
        }

        .sort-dropdown select {
            border-radius: 10px;
            padding: 8px 15px;
            border: 1px solid #ddd;
        }

        .table {
            margin: 0 auto;
            width: 100%;
            border-collapse: collapse;
        }

            .table th,
            .table td {
                padding: 10px;
                text-align: left;
            }

            .table th {
                background-color: #4A45F6;
                color: white;
                text-transform: uppercase;
            }

            .table tbody tr {
                border-bottom: 1px solid #ddd;
            }

                .table tbody tr:last-child {
                    border-bottom: none;
                }

        .btn {
            border-radius: 20px;
            padding: 5px 15px;
            font-size: 14px;
        }

        .pagination {
            margin-top: 20px;
            justify-content: center;
        }

            .pagination .page-link {
                border-radius: 10px;
                padding: 8px 12px;
            }

            .pagination .active .page-link {
                background-color: #4A45F6;
                border-color: #4A45F6;
            }
    </style>
</head>
<body>
    <div class="table-wrapper">
        <div class="header">
            <h1>Your Past Flights</h1>
            <p>Number of Flights: <strong>22</strong></p>
        </div>

        <div class="search-sort-wrapper">
            <div class="search-bar">
                <input type="text" placeholder="Search flights..." aria-label="Search">
            </div>
            <div class="sort-dropdown">
                <select>
                    <option value="newest" selected>Sort by: Newest</option>
                    <option value="oldest">Sort by: Oldest</option>
                </select>
            </div>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Flight Number</th>
                    <th>Departure Airport</th>
                    <th>Destination</th>
                    <th>Seat Number</th>
                    <th>Flight Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>MK 779</td>
                    <td>Cairo Airport</td>
                    <td>Jeddah Airport</td>
                    <td>22</td>
                    <td>22 December 2024</td>
                    <td><button class="btn btn-secondary">Cancel</button></td>
                </tr>
                <tr>
                    <td>JG 444</td>
                    <td>Borg El-Arab Airport</td>
                    <td>Abu Dhabi Airport</td>
                    <td>13</td>
                    <td>22 November 2024</td>
                    <td><button class="btn btn-secondary">Cancel</button></td>
                </tr>
                <tr>
                    <td>BOE 203</td>
                    <td>Aswan Airport</td>
                    <td>San Francisco Airport</td>
                    <td>44</td>
                    <td>22 March 2024</td>
                    <td><button class="btn btn-primary">Done</button></td>
                </tr>
                <tr>
                    <td>FOD 303</td>
                    <td>Luxor Airport</td>
                    <td>Berlin Airport</td>
                    <td>121</td>
                    <td>22 April 2024</td>
                    <td><button class="btn btn-primary">Done</button></td>
                </tr>
                <tr>
                    <td>DMG 225</td>
                    <td>Cairo Airport</td>
                    <td>Tokyo Airport</td>
                    <td>32</td>
                    <td>22 May 2020</td>
                    <td><button class="btn btn-primary">Done</button></td>
                </tr>
            </tbody>
        </table>

        <nav>
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item active"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">4</a></li>
                <li class="page-item"><a class="page-link" href="#">5</a></li>
                <li class="page-item"><a class="page-link" href="#">6</a></li>
                <li class="page-item"><a class="page-link" href="#">7</a></li>
            </ul>
        </nav>
    </div>

    <!-- JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
