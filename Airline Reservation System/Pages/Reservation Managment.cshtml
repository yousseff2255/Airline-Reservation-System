            border-radius: 4px;
            background-color: white;
            min-width: 200px;
        }
        
        .table {
            margin-bottom: 24px;
        }
        
        .table th {
            background-color: #f8f9fa;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
            color: #495057;
        }
        
        .table td {
            vertical-align: middle;
        }
        
        .pagination {
            justify-content: center;
            gap: 4px;
        }
        
        .page-link {
            padding: 8px 16px;
            border-radius: 4px;
        }
        
        .page-item.active .page-link {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }
        
        .btn-done {
            background-color: #28a745;
            color: white;
        }
        
       
